<%- include('include/head.ejs')%>

    <body>

        <%- include('include/navigation.ejs')%>

            <!-- Page Content -->
            <div class="container">

                <div class="row">

                    <%- include('include/sidebar.ejs')%>


                        <div class="col-lg-9">

                            <%- include('include/carousel.ejs')%>

                                <div class="row">

                                    <% for(let p of prods) {%>

                                        <div class="col-lg-4 col-md-6 mb-4">
                                            <div class="card h-100">
                                                <a href="#"><img class="card-img-top" src="<%= p.imageURL%>" alt=""></a>
                                                <div class="card-body">
                                                    <h4 class="card-title">
                                                        <a href="#">
                                                            <%= p.title%>
                                                        </a>
                                                    </h4>
                                                    <h5>Pay/Hour:
                                                        $<%= p.pay%>
                                                        CAD
                                                    </h5>
                                                    <!-- <p class="card-text">
                                                        <%= p.description%>
                                                    </p> -->
                                                </div>
                                                <div class="card-footer">
                                                    <a class="btn btn-primary" href="/products/<%=p._id%>" role="button">View Details</a>
                                                    <a class="btn btn-primary" href="/edit-listing/<%=p._id%>" role="button">Edit</a>
                                                    <form action="/delete-listing" method="POST">
                                                        <input type="hidden" name="id" value="<%=p._id%>">
                                                        <button type="submit" class="btn btn-primary">Delete</button>
                                                    </form>
                                                    <form action="/api/users" method="POST" id="add-to-cart">
                                                        <input type="hidden" name="id" value="<%=p.id%>">
                                                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>

                                        <%
                                    }
                                    %>

                                </div>
                                <!-- /.row -->
                        </div>
                        <!-- /.col-lg-9 -->
                </div>
                <!-- /.row -->

            </div>
            <!-- /.container -->

            <%- include('include/end.ejs')%>